    <select Id='recherche' name='recherche' >
    {% for filter in filters %}
            <OPTION id='recherche' value='{{ filter.keywords }}'>{{ filter.keywords }}             
    {% endfor %}
    </select> 
<BR/><BR/>
{% endif %}

<div class="row">
    {{ form_start(filterForm)  }}
