        <div class="text-light">{{ form_row(filterForm.max_duration) }}</div>
        <br>
        <div class="text-light">{{ form_row(filterForm.min_uploadDate) }}</div>
        <br>
        <div class="text-light">{{ form_row(filterForm.max_uploadDate) }}</div>
        <br>
        <div class="text-light">{{ form_row(filterForm.has_subtitles) }}</div>
        <br>
        <div class="text-light">{{ form_row(filterForm.keywords) }}</div>
        <br>
        <div class="text-light">{{ form_row(filterForm.category) }}</div>
    {{ form_end(filterForm) }}
</div>

<div class="text-light">
{% if data is defined %}
    {% for vid in data %}
        {{ vid.title }}<br>
        {{ vid.url }}<br>
        {{ vid.statistic.nbLikes }}<br>
        {{ vid.uploader.name }}
    {% endfor %}
{% endif %}
</div>

{% endblock %}