{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-main">
    <h3>FILTRES</h3>
    <div class="under_title"></div>

    <form action="">
    <div class="container-input">
        <div class="row justify-content-between">
            <div class="col-sm-7 col-md-7">
                <label for="url" class="form-label">URL</label>
                <input type="text" class="form-control" id="url" placeholder="UrlVideo" aria-label="URL Video">
            </div>
            <div class="col-sm col-md-3">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" id="category" aria-label="Category">
                    <option selected>Choose a category</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <div class="col-sm col-md-2">
                <label for="tags" class="form-label">Tags</label>
                <select class="form-select" id="tags" aria-label="Tags">
                    <option selected>Choose tags</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-between">
            <div class="col-sm-7 col-md-3">
                <label for="likes" class="form-label">Likes</label>
                <div class="double-input col-md-12">
                    <input type="text" class="form-control" id="likes_min" placeholder="Nb Min" aria-label="Min">
                    <p class="inter-input">à</p>
                    <input type="text" class="form-control" id="likes_max" placeholder="Nb Max" aria-label="Max">
                </div>
            </div>

            <div class="col-sm-7 col-md-3">
                <label for="views" class="form-label">Nb vus</label>
                <div class="double-input col-md-12">
                    <input type="text" class="form-control" id="views" placeholder="Nb Min" aria-label="Min">
                    <p class="inter-input">à</p>
                    <input type="text" class="form-control" placeholder="Nb Max" aria-label="Max">
                </div>
            </div>

            <div class="col-sm-7 col-md-5">
                <label for="upload_date" class="form-label">Date d'upload</label>
                <div class="double-input col-md-12" id="upload_date" data-provide="datepicker">
                    <input type="date" class="form-control" aria-label="Date début">
                    <p class="inter-input">à</p>
                    <input type="date" class="form-control" aria-label="Date fin">
                    {#                        <div class="input-group-addon">#}
                    {#                            <span class="glyphicon glyphicon-th"></span>#}
                    {#                        </div>#}
                </div>
            </div>
        </div>

        <div class="row justify-content-between">
            <div class="col-sm-7 col-md-3">
                <label for="dislikes" class="form-label">Dislikes</label>
                <div class="double-input col-md-12">
                    <input type="text" class="form-control" id="dislikes" placeholder="Nb Min" aria-label="Min">
                    <p class="inter-input">à</p>
                    <input type="text" class="form-control"  placeholder="Nb Max" aria-label="Max">
                </div>
            </div>

            <div class="col-sm-7 col-md-3">
                <label for="time" class="form-label">Durée</label>
                <div class="double-input col-md-12">
                    <input type="text" class="form-control" id="time" placeholder="Nb Min" aria-label="Min">
                    <p class="inter-input">à</p>
                    <input type="text" class="form-control" placeholder="Nb Max" aria-label="Max">
                </div>
            </div>
            <div class="col-sm-7 col-md-5">
                <label for="flexSwitchCheckDefault" class="form-label">Sous-Titres</label>
                <div class="col-md-12 form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                </div>
            </div>
        </div>
    </div>

        <div class="row">
            <div class="col-sm-7 col-md-12" style="text-align: end">
                <button type="button" class="btn btn-danger button">Rechercher</button>
            </div>
        </div>


    </form>
    {% endblock %}

    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('search') }}
    {% endblock %}
