{% extends 'base.html.twig' %}

{% block title %}Statistiques des vidéos choisies!{% endblock %}
{% block pageTitle %}Statistiques{% endblock %}

{% block body %}
    <input type="hidden" class="d-none" id="stringParamId" value="{{ stringParam }}" />
    <div class="container">
        <div class="title-part-graph my-3" >
            <h3>Statistiques du filtre</h3>
            <div class="under_title"></div>
        </div>

        <div class="row container-main justify-content-between" style="display: flex;">
            <div class="container-graph double-column" style="width: 45%;">
                <canvas id="myChart" class="graph"></canvas>
                <a id="btn-vid-filtre" href="{{ path('get_info_from_search', {stringParam : stringParam}) }}" class="btn btn-danger get-info-from-search mx-auto btn-graph" onclick="displayNone('btn-vid-filtre', 'myChart')">Charger les données (pie videos filtres)</a>
            </div>

            <div class="double-column">
                <div class="container-graph graph-resume mb-3">
                    <div class="graph-resume-libelle">
                        <p><span style="font-size: 1.7em; color: white">Récap de la recherche</span></p>
                        <p>Nb de vidéos filtrées : <span id="nb-videos"></p>
                        {#<p>Tag le plus présent :</p>#}
                        <p>Nb de vue moyenne :  <span id="mean-views"></span></p>
                        <p>Nb de like moyen : <span id="mean-likes"></span></p>
                        <p>Durée moyenne des vidéos : <span id="mean-duration"></span></p>
                    </div>
                </div>

                <div class="container-graph">
                    <canvas id="myChartCategories" class="graph"></canvas>
                    <a id="btn-categories" href="{{ path('get_categories_data', {stringParam : stringParam}) }}" class="btn btn-danger get-categories-data mx-auto btn-graph" onclick="displayNone('btn-categories', 'myChartCategories')">Charger les données (Categories)</a>
                </div>
            </div>
        </div>


        <div class="row container-main justify-content-between">
            <div class="container-graph graph-40" >
                <canvas id="myChartTags" class="graph"></canvas>
                <a id="btn-tags" href="{{ path('get_tags_data', {stringParam : stringParam}) }}" class="btn btn-danger get-tags-data mx-auto btn-graph" onclick="displayNone('btn-tags', 'myChartTags')">Charger les données (Tags)</a>
            </div>

            <div class="container-graph graph-40">
                <canvas id="myChartLikesViews" class="graph"></canvas>
                <a id="btn-likes" href="{{ path('get_graph_json_data', {stringParam : stringParam}) }}" class="btn btn-danger get-graph-json-data mx-auto btn-graph" onclick="displayNone('btn-likes', 'myChartLikesViews')">Charger les données (graph 1 et 2)</a>
            </div>
        </div>

        <div class="row container-main justify-content-between">
            <div class="container-graph" >
                <canvas id="myChartDate" class="graph"></canvas>
                <a  id="btn-dates" href="{{ path('get_date_data', {stringParam : stringParam}) }}" class="btn btn-danger get-date-data mx-auto btn-graph" onclick="displayNone('btn-dates', 'myChartDate')">Charger les données (Date nbvues)</a>
            </div>
        </div>

    </div>

    <script>
        function displayNone(idButton, idCanva){
            document.getElementById(idButton).style.display = "none";
            document.getElementById(idCanva).style.visibility = "visible";

        }
    </script>


{% endblock %}



{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('stats') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('stats') }}
{% endblock %}