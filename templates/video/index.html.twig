{% extends 'base.html.twig' %}

{% block title %}Hello VideoController!{% endblock %}

{% block body %}

<div class="container text-light">
    <h1>{{ video.title }} ✅</h1>
    <div class="row">
        <div class="col-md-4">
            <img src="{{ video.thumbnail }}" alt="" width="400" height="300">
            <p>Nombre de vues : {{ video.statistic.nbViews }}</p>
            <p>Nombre de likes : {{ video.statistic.nbLikes }}</p>
        </div>
        <div class="col-md-8">
            <p>Description : {{ video.description }}</p>
            <p>Catégorie : {{ video.category.name }}</p>
            <p>Date de sortie : {{ video.statistic.releaseDate|date('d/m/Y') }}</p>
            <p>Durée : {{ video.statistic.duration }}</p>
        </div>
    </div>
    <div class="row my-1">
        <iframe width="420" height="500" src="https://www.youtube.com/embed/{{ video.url }}"></iframe>
    </div>
</div>
{% endblock %}
